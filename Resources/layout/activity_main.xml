
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/activity_main_title"
        android:layout_width="match_parent"
        android:layout_height="42.5dp"
        android:gravity="center"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/activity_main_title"
        android:layout_marginBottom="0.0dp" />
    <Button
        android:text="@string/button_voice01"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/activity_main_title"
        android:id="@+id/button_voice_01" />
    <Button android:text="@string/button_voice02"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/button_voice_01"
        android:id="@+id/button_voice_02" />
    <Button android:text="@string/button_voice03"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/button_voice_02"
        android:id="@+id/button_voice_03" />
</RelativeLayout>